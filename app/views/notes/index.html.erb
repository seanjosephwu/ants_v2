
<% content_for(:title) {"The only notebook you'll ever need" } %>

	<% content_for :content do %>
	<% end %>

	<div class="container">

		<h1>Project / <%= @project.name %></h1>

        <%= form_tag project_notes_path, :method => 'get' do %>
            <p>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search", :name => nil %>
            </p>
        <% end %>
	
		<br />

		<table>
		  <tr>
		    <th width="15%">Name</th>
		    <th width="25%">Description</th>
		    <th width="10%">User</th>
		    <th width="5%">Project</th>
		    <th width="5%">Note</th>
		    <th width="25%">Content</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>

		<% @notes.each do |note| %>
		  <tr>
		    <td><%= note.name %></td>
		    <td><%= note.description %></td>
		    <td><%= note.user %></td>
		    <td><%= note.project_id %></td>
		    <td><%= note.note_id %></td>
		    <td><%= note.content %></td>
		<!--    <td><button><%= link_to 'Show', project_note_path(note.project, note) %></button></td>
		    <td><button><%= link_to 'Edit', edit_project_note_path(note.project, note) %></button></td>
		    <td><button><%= link_to 'Destroy', project_note_path(note.project, note), method: :delete, data: { confirm: 'Are you sure?' } %></button></td> !-->
		    <td><%= link_to 'Show', project_note_path(note.project, note) %></td>
		    <td><%= link_to 'Edit', edit_project_note_path(note.project, note) %></td>
		    <td><%= link_to 'Destroy', project_note_path(note.project, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'New Note', new_project_note_path(@project) %>

		<br /><br /><br /><br /><br />
		

<% content_for(:title) {"The only notebook you'll ever need" } %>

	<% content_for :content do %>
	<% end %>

	<div class="container">

		<h1>Projects</h1>
		
		<br /><br />

		<table>
			<tr>
				<th id="project_name" width="15%"><h2>Name</h2></th>
				<th id="project_desc" width="60%"><h2>Description</h2></th>
				<th id="project_user" width="10%"><h2>User</h2></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>

			<% @projects.each do |project| %>
			<tr>
				<td><%= project.name %></td>
				<td><%= project.description %></td>
				<td><%= project.user %></td>
				<td id="project_show"><button><%= link_to 'View', project %></button></td>
				<td id="project_edit"><button><%= link_to 'Edit', edit_project_path(project) %></button></td>
				<td id="project_destroy"><button><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
			</tr>
			<% end %>
		</table>

		<br />

		<button><%= link_to 'New Project', new_project_path %></button>
		
		<br /><br /><br /><br /><br />
		
		<h2>For SciAnts!</h2>
		<a href="/pages/home">Demo Home</a> | Created at <a href="http://angelhack.com/">AngelHack Summer 2012</a>
		<h3>Powered by </h3><%= image_tag "evernote.png", :width => "250px", alt: "Evernote" %>

</div>
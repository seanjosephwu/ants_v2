<% content_for(:title) {"The only notebook you'll ever need" } %>

<% content_for :content do %>
<% end %>

<div class="container">

	<h1>Projects</h1>

	<br /><br />

	<button class="btn btn-primary" type="button"><%= link_to 'New Project', new_project_path %></button>

	<br /><br />

	<% @projects.each do |project| %>
	<div class="projects">
		<div class="project-right">
			<button type="button" class="btn"><%= link_to 'View', project %></button><br />
			<button type="button" class="btn"><%= link_to 'Edit', edit_project_path(project) %></button><br />
			<button type="button" class="btn btn-danger"><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></button>

		</div>

		<h1><%= project.name %></h1>
		<h2><%= project.user %></h2>
		<h3><%= project.description %></h3>
	</div>
	<% end %>	
</div>